<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="Theme.CloudPhoneTool" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Force Dark Theme -->
        <item name="colorPrimary">#BB86FC</item>
        <item name="colorPrimaryVariant">#3700B3</item>
        <item name="colorSecondary">#03DAC6</item>
        <item name="colorOnPrimary">@android:color/black</item>
        <item name="colorSurface">#121212</item>
        <item name="colorOnSurface">#E1E1E1</item>
        <item name="android:colorBackground">#000000</item>
        <item name="android:textColorPrimary">#FFFFFF</item>
        <item name="android:textColorSecondary">#B0B0B0</item>
        <item name="android:statusBarColor">@android:color/black</item>
        <item name="android:navigationBarColor">@android:color/black</item>
        <item name="android:windowLightStatusBar" tools:targetApi="m">false</item>
        <!-- Instant splash screen to prevent hanging -->
        <item name="android:windowDisablePreview">false</item>
        <item name="android:windowBackground">@android:color/black</item>
    </style>
</resources>
