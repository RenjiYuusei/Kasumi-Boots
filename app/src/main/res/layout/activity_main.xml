<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#0D0D12"
    android:padding="20dp"
    tools:context="com.kasumi.boots.ui.MainActivity">

        <!-- Header with modern styling -->
        <TextView
            android:id="@+id/headerTitle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="KASUMI BOOTS"
            android:textSize="26sp"
            android:textStyle="bold"
            android:textColor="#FFFFFF"
            android:letterSpacing="0.08"
            android:gravity="center"
            android:shadowColor="#00FFB355"
            android:shadowDx="0"
            android:shadowDy="0"
            android:shadowRadius="12"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="4dp"/>

        <!-- Subtitle -->
        <TextView
            android:id="@+id/headerSubtitle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Tối Ưu Hiệu Năng"
            android:textSize="12sp"
            android:textColor="#8A8A9E"
            android:letterSpacing="0.15"
            android:gravity="center"
            app:layout_constraintTop_toBottomOf="@id/headerTitle"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <!-- Status Card with modern design -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/statusContainer"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:cardBackgroundColor="#1C1C28"
            app:cardCornerRadius="16dp"
            app:cardElevation="4dp"
            app:strokeColor="#2F2F42"
            app:strokeWidth="1dp"
            app:layout_constraintTop_toBottomOf="@id/headerSubtitle"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="24dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <TextView
                    android:id="@+id/tvStatus"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/status_ready"
                    android:gravity="center"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:textColor="#00FFB3"
                    android:shadowColor="#00FFB355"
                    android:shadowDx="0"
                    android:shadowDy="0"
                    android:shadowRadius="8"/>

                <ProgressBar
                    android:id="@+id/progress"
                    style="@android:style/Widget.Material.ProgressBar.Horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="4dp"
                    android:layout_marginTop="12dp"
                    android:visibility="gone"
                    android:indeterminate="true"
                    android:indeterminateTint="#00FFB3"
                    android:progressBackgroundTint="#2A2A3A"/>

                <TextView
                    android:id="@+id/tvDescription"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/boost_description"
                    android:layout_marginTop="12dp"
                    android:textSize="13sp"
                    android:gravity="center"
                    android:textColor="#8A8A9E"
                    android:lineSpacingExtra="2dp"/>

            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

        <!-- Log Card with modern design -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/logCard"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:cardBackgroundColor="#1C1C28"
            app:cardCornerRadius="16dp"
            app:cardElevation="4dp"
            app:strokeColor="#2F2F42"
            app:strokeWidth="1dp"
            app:layout_constraintTop_toBottomOf="@id/statusContainer"
            app:layout_constraintBottom_toTopOf="@id/discordLink"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="16dp">

            <ScrollView
                android:id="@+id/logScrollView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="16dp"
                android:scrollbars="vertical"
                android:fadeScrollbars="false">

                <TextView
                    android:id="@+id/tvLog"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/log_empty"
                    android:textSize="12sp"
                    android:textColor="#00FFB3"
                    android:fontFamily="monospace"
                    android:textIsSelectable="true"
                    android:lineSpacingExtra="4dp"
                    android:shadowColor="#00FFB322"
                    android:shadowDx="0"
                    android:shadowDy="0"
                    android:shadowRadius="4"/>

            </ScrollView>

        </com.google.android.material.card.MaterialCardView>

        <!-- Discord Button with modern design -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/discordLink"
            android:layout_width="0dp"
            android:layout_height="52dp"
            android:text="@string/discord_join"
            android:textSize="14sp"
            android:textStyle="bold"
            android:textColor="#FFFFFF"
            app:icon="@drawable/ic_discord"
            app:iconGravity="textStart"
            app:iconSize="22dp"
            app:iconTint="#FFFFFF"
            app:backgroundTint="#5865F2"
            app:rippleColor="#FFFFFF"
            app:cornerRadius="12dp"
            app:strokeColor="@android:color/transparent"
            app:strokeWidth="0dp"
            android:letterSpacing="0.06"
            android:elevation="4dp"
            android:shadowColor="#5865F233"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toTopOf="@id/btnBoost"
            android:layout_marginBottom="12dp"
            style="@style/Widget.MaterialComponents.Button"/>

        <!-- Boost Button with modern design and glow effect -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnBoost"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:text="@string/boost_now"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="#0D0D12"
            app:backgroundTint="#00FFB3"
            app:rippleColor="#FFFFFF"
            app:cornerRadius="12dp"
            app:elevation="6dp"
            android:letterSpacing="0.08"
            android:shadowColor="#00FFB355"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="8dp"
            style="@style/Widget.MaterialComponents.Button"/>

        <!-- Hidden old Discord button -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnDiscord"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:visibility="gone"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>
