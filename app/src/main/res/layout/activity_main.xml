<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="@drawable/gradient_background"
    tools:context="com.kasumi.boots.ui.MainActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="20dp">

        <LinearLayout
            android:id="@+id/headerLayout"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="16dp"
            android:paddingVertical="8dp">
            
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="âš¡ KASUMI BOOTS"
                android:textSize="28sp"
                android:textStyle="bold"
                android:textColor="#FFFFFF"
                android:shadowColor="#FF00FF"
                android:shadowDx="0"
                android:shadowDy="0"
                android:shadowRadius="15"
                android:gravity="start|center_vertical"/>
            
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnDiscord"
                android:layout_width="wrap_content"
                android:layout_height="42dp"
                android:text="Discord"
                android:textSize="13sp"
                android:textStyle="bold"
                android:paddingHorizontal="16dp"
                app:cornerRadius="21dp"
                app:backgroundTint="#5865F2"
                android:textColor="#FFFFFF"
                app:elevation="4dp"
                style="@style/Widget.MaterialComponents.Button"/>
                
        </LinearLayout>

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/cardStatus"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/headerLayout"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="24dp"
            app:cardElevation="12dp"
            app:cardCornerRadius="20dp"
            app:cardBackgroundColor="@drawable/card_gradient">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="24dp"
                android:gravity="center">

                <TextView
                    android:id="@+id/tvStatus"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/status_checking"
                    android:gravity="center"
                    android:textSize="24sp"
                    android:textStyle="bold"
                    android:textColor="#00FFD1"
                    android:shadowColor="#00FFD1"
                    android:shadowDx="0"
                    android:shadowDy="0"
                    android:shadowRadius="10"/>

                <ProgressBar
                    android:id="@+id/progress"
                    style="@android:style/Widget.Material.ProgressBar.Horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="6dp"
                    android:layout_marginTop="16dp"
                    android:visibility="gone"
                    android:indeterminate="true"
                    android:indeterminateTint="#FF00FF"/>

                <TextView
                    android:id="@+id/tvDescription"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/boost_description"
                    android:layout_marginTop="12dp"
                    android:textSize="14sp"
                    android:gravity="center"
                    android:lineSpacingExtra="4dp"
                    android:textColor="#D0D0D0"
                    android:alpha="0.9"/>

            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/cardLog"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintTop_toBottomOf="@id/cardStatus"
            app:layout_constraintBottom_toTopOf="@id/btnBoost"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            app:cardElevation="10dp"
            app:cardCornerRadius="20dp"
            app:cardBackgroundColor="@drawable/log_card_gradient">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/log_title"
                    android:padding="16dp"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="#FFFFFF"
                    android:background="@drawable/log_header_gradient"/>

                <ScrollView
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1">

                    <TextView
                        android:id="@+id/tvLog"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/log_empty"
                        android:padding="16dp"
                        android:textSize="13sp"
                        android:textColor="#00FF88"
                        android:fontFamily="monospace"
                        android:textIsSelectable="true"
                        android:lineSpacingExtra="2dp"
                        android:background="#0D0D0D"/>

                </ScrollView>

            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnBoost"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/boost_now"
            android:textSize="20sp"
            android:textStyle="bold"
            android:paddingVertical="24dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:cornerRadius="24dp"
            app:icon="@android:drawable/ic_media_play"
            app:iconGravity="textStart"
            app:iconSize="32dp"
            app:backgroundTint="@drawable/button_gradient"
            android:textColor="#FFFFFF"
            android:shadowColor="#FF00FF"
            android:shadowDx="0"
            android:shadowDy="0"
            android:shadowRadius="8"
            app:elevation="12dp"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>
